= partial "partials/header"

- wrap_layout :layout do
  %main.container
    %section.container-content
      = yield

.bd-top
  %section.outer-container.col-3
    .p-top-m
      - data.projects.projects.each_with_index do |project, index|
        %article.project-item.column
          =link_to "/projects/#{project.slug}" do
            .image-wrapper
              = image_tag(project.main_image_url)
            .text-wrapper
              %h3.p-title= project.name
              %h6.p-type= project.type
              %h6.p-timeframe= project.timeframe

= partial "partials/footer"
